{% extends 'base.html.twig' %}

{% block title %} {{ 'title.user'|trans }} {% endblock %}

{% block body %}
    <div class="container">

        <h1 class="mt-5"> {{ 'title.user'|trans }} </h1>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th>{{ 'user.nom'|trans }}</th>
                    <th>{{ 'user.prenom'|trans }}</th>
                    <th>{{ 'user.email'|trans }}</th>
                    <th>{{ 'user.date'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for u in users %}
                <tr>
                    <td>{{ u.lastName }}</td>
                    <td>{{ u.firstName}}</td>
                    <td>{{ u.email}}</td>
                    <td>{{ u.date|date('Y-m-d H:i:s')}}</td>
                </tr>
            {% else %}
                <tr>
                    <td> {{ 'admin.nouser'|trans }} /td>
                </tr>
            {% endfor %}

               
            </tbody>
        </table>

    </div>
   
    
{% endblock %}
